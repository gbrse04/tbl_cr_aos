<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar" />

    <style name="WhiteDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="GrayDividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="GrayDividerVertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="SelectedTab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="LayoutSearchGrid" parent="Layout.Weight.WidthFillHeight">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Button.Orange" parent="Text.Shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/btn_orange</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBox" parent="Text.Content.Black">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_text_setting</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextNumber"  >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        
         <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        
        <item name="android:background">@drawable/bg_textbox_number</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Text.Shadow.Tabbar">
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>