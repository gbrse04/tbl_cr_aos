<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRestaurant"
    style="@style/Layout.FillWidth.Vertical"
    android:padding="10dp"
    tools:context=".adapter.RestaurantAdapter" >

    <LinearLayout style="@style/Layout.FillWidth" >

        <ImageView
            android:id="@+id/imgFood"
            android:layout_width="@dimen/size_item_restaurant"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image_available_horizontal" />

        <LinearLayout
            style="@style/Layout.FillWidth.Vertical"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/lblRestaurantName"
                style="@style/Text.Title.Black"
                android:text="@string/app_name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblRestaurantAddress"
                style="@style/Text.Content.Black"
                android:layout_marginTop="10dp"
                android:text="@string/app_name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lblTime"
                style="@style/Text.Content.Black"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_clock_food"
                android:drawablePadding="10dp"
                android:text="@string/app_name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lblNumber"
                style="@style/Text.Content.Black"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/btn_number"
                android:drawablePadding="5dp"
                android:text="@string/app_name"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/lblDescription"
        style="@style/Text.Content.Black"
        android:layout_marginTop="5dp"
        android:maxLines="3"
        android:text="@string/app_name"
        android:textSize="14sp" />

</LinearLayout>