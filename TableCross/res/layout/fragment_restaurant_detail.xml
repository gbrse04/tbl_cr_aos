<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Layout.FillWidthHeight.Vertical"
    tools:context=".fragment.RestaurantDetailFragment" >

    <LinearLayout style="@style/Layout.FillWidthHeight.Vertical" >

        <TextView
            android:id="@+id/lblRestaurantName"
            style="@style/Text.Title.Black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblRestaurantAddress"
            style="@style/Text.Content.Black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/app_name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lblNumber"
            style="@style/Text.Content.Black"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/btn_number_book"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textSize="14sp" />

        <LinearLayout
            style="@style/Layout.FillWidth"
            android:layout_height="@dimen/height_button_detail"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp" >

            <com.gip.tablecross.widget.AutoBgButton
                android:id="@+id/btnCall"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_call" />

            <RelativeLayout style="@style/Layout.Weight.WidthFillHeight" >

                <com.gip.tablecross.widget.AutoBgButton
                    android:id="@+id/btnMap"
                    android:layout_width="@dimen/height_button_detail"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_show_map" />
            </RelativeLayout>

            <com.gip.tablecross.widget.AutoBgButton
                android:id="@+id/btnWeb"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_calendar" />
        </LinearLayout>

        <TextView
            android:id="@+id/lblShortDescription"
            style="@style/Text.Content.Black"
            android:layout_margin="10dp"
            android:text="@string/app_name"
            android:textSize="14sp" />

        <com.gip.tablecross.widget.AutoBgButton
            android:id="@+id/btnGallery"
            android:layout_width="@dimen/height_button_detail"
            android:layout_height="@dimen/height_button_detail"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_gallery" />

        <View style="@style/GrayDividerHorizontal" />

        <ImageView
            android:id="@+id/imgFood"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_image_detail"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image_available_horizontal" />

        <TextView
            android:id="@+id/lblDescription"
            style="@style/Text.Content.Black"
            android:layout_margin="10dp"
            android:text="@string/app_name"
            android:textSize="14sp" />
    </LinearLayout>

</ScrollView>