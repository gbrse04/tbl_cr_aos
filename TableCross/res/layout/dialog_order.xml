<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Layout.FillWidthHeight.Vertical"
    tools:context=".activity.CheckMapActivity" >

    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        style="@style/Text.Content.Black"
        android:gravity="center_horizontal"
        android:text="@string/pleaseCall" />

    <LinearLayout
        style="@style/Layout.WrapWidthHeight"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical" >

        <com.bamboo.tablecross.widget.AutoBgButton
            android:id="@+id/btnCall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_circle_call"
            android:textColor="@color/violet"
            android:textSize="13sp" />

        <com.bamboo.tablecross.widget.AutoBgButton
            android:id="@+id/btnCancel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_circle_cancel"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>