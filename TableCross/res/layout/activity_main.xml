<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Layout.FillWidthHeight.Vertical"
    android:background="@android:color/white"
    tools:context=".activity.MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_header" >

        <TextView
            android:id="@+id/lblHeaderLeft"
            style="@style/Text.Shadow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_forma"
            android:drawablePadding="2dp"
            android:paddingLeft="8dp"
            android:text="@string/app_name"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lblHeader"
            style="@style/Text.Shadow"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/app_name"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lblHeaderRight"
            style="@style/Text.Shadow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="@string/share"
            android:textSize="13sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imgSetting"
            style="@style/Layout.WrapWidthHeight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="15dp"
            android:src="@drawable/ic_setting" />
    </RelativeLayout>

    <RelativeLayout style="@style/Layout.Weight.HeightFillWidth" >

        <fragment
            android:id="@+id/fragmentNotification"
            android:name="com.gip.tablecross.fragment.NotificationFragment"
            style="@style/Layout.FillWidthHeight" />

        <fragment
            android:id="@+id/fragmentSearch"
            android:name="com.gip.tablecross.fragment.SearchFragment"
            style="@style/Layout.FillWidthHeight" />

        <fragment
            android:id="@+id/fragmentShare"
            android:name="com.gip.tablecross.fragment.ShareFragment"
            style="@style/Layout.FillWidthHeight" />

        <fragment
            android:id="@+id/fragmentUser"
            android:name="com.gip.tablecross.fragment.MyPagesFragment"
            style="@style/Layout.FillWidthHeight" />

        <fragment
            android:id="@+id/fragmentSearchCondition"
            android:name="com.gip.tablecross.fragment.search.ConditionSearchFragment"
            style="@style/Layout.FillWidthHeight" />

        <fragment
            android:id="@+id/fragmentSearchLocation"
            android:name="com.gip.tablecross.fragment.search.LocationSearchFragment"
            style="@style/Layout.FillWidthHeight" />

        <fragment
            android:id="@+id/fragmentSearchHistory"
            android:name="com.gip.tablecross.fragment.search.HistorySearchFragment"
            style="@style/Layout.FillWidthHeight" />

        <fragment
            android:id="@+id/fragmentSearchFeature"
            android:name="com.gip.tablecross.fragment.search.FeatureSearchFragment"
            style="@style/Layout.FillWidthHeight" />

        <fragment
            android:id="@+id/fragmentSetting"
            android:name="com.gip.tablecross.fragment.SettingFragment"
            style="@style/Layout.FillWidthHeight" />

        <fragment
            android:id="@+id/fragmentHome"
            android:name="com.gip.tablecross.fragment.HomeFragment"
            style="@style/Layout.FillWidthHeight" />

        <fragment
            android:id="@+id/fragmentFoodDetail"
            android:name="com.gip.tablecross.fragment.RestaurantDetailFragment"
            style="@style/Layout.FillWidthHeight" />

        <fragment
            android:id="@+id/fragmentNotificationDetail"
            android:name="com.gip.tablecross.fragment.NotificationDetailFragment"
            style="@style/Layout.FillWidthHeight" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bg_tab" >

        <RelativeLayout
            android:id="@+id/layoutTabNotification"
            style="@style/Layout.Weight.WidthFillHeight"
            android:background="@drawable/tab_selected" >

            <TextView
                style="@style/Text.Shadow.Tabbar"
                android:layout_centerVertical="true"
                android:drawableTop="@drawable/ic_tab_notification"
                android:text="@string/notification" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutTabSearch"
            style="@style/Layout.Weight.WidthFillHeight" >

            <TextView
                style="@style/Text.Shadow.Tabbar"
                android:layout_centerVertical="true"
                android:drawableTop="@drawable/ic_tab_search"
                android:text="@string/search" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutTabShare"
            style="@style/Layout.Weight.WidthFillHeight" >

            <TextView
                style="@style/Text.Shadow.Tabbar"
                android:layout_centerVertical="true"
                android:drawableTop="@drawable/ic_tab_share"
                android:text="@string/share" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutTabUser"
            style="@style/Layout.Weight.WidthFillHeight" >

            <TextView
                style="@style/Text.Shadow.Tabbar"
                android:layout_centerVertical="true"
                android:drawableTop="@drawable/ic_tab_user"
                android:text="@string/myPage" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>