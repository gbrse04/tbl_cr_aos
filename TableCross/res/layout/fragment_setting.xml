<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout.FillWidthHeight" >

    <LinearLayout
        style="@style/Layout.FillWidthHeight.Vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp" >

        <EditText
            android:id="@+id/txtIdentity"
            style="@style/TextBox"
            android:hint="@string/identity"
            android:imeOptions="actionNext" />

        <EditText
            android:id="@+id/txtEmail"
            style="@style/TextBox"
            android:hint="@string/email"
            android:imeOptions="actionNext" />

        <EditText
            android:id="@+id/txtPhone"
            style="@style/TextBox"
            android:hint="@string/phone_"
            android:imeOptions="actionDone"
            android:inputType="phone" />

        <TextView
            android:id="@+id/lblBirthday"
            style="@style/TextBox"
            android:gravity="center_vertical"
            android:hint="@string/birthday" />

        <com.gip.tablecross.widget.AutoBgButton
            android:id="@+id/btnSave"
            style="@style/Button.Orange"
            android:text="@string/save" />

        <LinearLayout
            style="@style/Layout.FillWidth"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical" >

            <TextView
                style="@style/Text.Content.Black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/notice" />

            <CheckBox
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:button="@drawable/checkbox_selector" />
        </LinearLayout>

        <LinearLayout
            style="@style/Layout.FillWidth"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical" >

            <TextView
                style="@style/Text.Content.Black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/acknowledgmentReservation" />

            <CheckBox
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:button="@drawable/checkbox_selector" />
        </LinearLayout>

        <LinearLayout
            style="@style/Layout.FillWidth"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical" >

            <TextView
                style="@style/Text.Content.Black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/storeNameNotify" />

            <CheckBox
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:button="@drawable/checkbox_selector" />
        </LinearLayout>

        <LinearLayout
            style="@style/Layout.FillWidth"
            android:layout_marginTop="0dp" >

            <com.gip.tablecross.widget.AutoBgButton
                android:id="@+id/btnChangePass"
                style="@style/Button.Orange"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/changePass" />

            <com.gip.tablecross.widget.AutoBgButton
                android:id="@+id/btnLogout"
                style="@style/Button.Orange"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/logout" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>